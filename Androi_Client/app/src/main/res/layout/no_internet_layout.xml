<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Status Bar -->

    <!-- Back Button -->

    <!-- Content -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/back_button_background"
        android:padding="8dp"
        android:src="@drawable/ic_backk" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="706dp"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:orientation="vertical"
        android:padding="32dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/wifi_router" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Not Found"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Không có kết nối internet"
            android:textColor="#666666"
            android:textSize="14sp" />

        <Button
            android:id="@+id/retryButton"
            android:layout_width="271dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/retry_button_background"
            android:text="🔄 Thử lại và làm mới"
            android:textColor="#FF8C42"
            android:textSize="16sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/backToHomeButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/orange_button_background"
            android:text="Trở về trang chủ →"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:backgroundTint="@null" />
    </LinearLayout>
</LinearLayout>