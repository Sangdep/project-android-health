<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_text_icon"
    tools:context=".upload.InforAge">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:background="@drawable/header_nav_bg"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_button_style"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_backk"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Tuổi"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Question Text -->
    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bạn bao nhiêu tuổi?"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Displayed Age -->
    <TextView
        android:id="@+id/textViewDisplayedAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 tuổi"
        android:textColor="@android:color/white"
        android:textSize="56sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/textViewQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Age Ruler Scroll -->
    <HorizontalScrollView
        android:id="@+id/ageRulerScroll"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/textViewDisplayedAge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/ageRulerContent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <View
        android:id="@+id/ageIndicator"
        android:layout_width="4dp"
        android:layout_height="80dp"
        android:background="@android:color/white"
        android:alpha="0.9"
        app:layout_constraintTop_toTopOf="@id/ageRulerScroll"
        app:layout_constraintBottom_toBottomOf="@id/ageRulerScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Tiếp tục"
        app:backgroundTint="@null"
        android:textColor="@color/orange_text_icon"
        android:background="@drawable/rounded_corner_button_white"
        app:icon="@drawable/ic_arrow_forward"
        app:iconTint="@color/orange_text_icon"
        app:iconGravity="textEnd"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/ageRulerScroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

