<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:background="@drawable/header_nav_bg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="30dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_button_style"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_backk"
            app:tint="@android:color/white" />>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Đổi mật khẩu"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Form Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Old Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nhập mật khẩu cũ"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/notification_item_background">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_lockk"
                app:tint="@color/gray_light" />

            <EditText
                android:id="@+id/oldPasswordEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:background="@android:color/transparent"
                android:hint="*************"
                android:textColorHint="@color/gray_light"
                android:textColor="@android:color/white"
                android:inputType="textPassword"
                android:textSize="14sp"
                />

            <ImageView
                android:id="@+id/oldPasswordToggle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_solid_eye"
                app:tint="@color/gray_light" />

        </LinearLayout>

        <!-- New Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nhập mật khẩu mới"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/notification_item_background">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_lockk"

                app:tint="@color/gray_light" />

            <EditText
                android:id="@+id/newPasswordEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:background="@android:color/transparent"
                android:hint="*************"
                android:textColorHint="@color/gray_light"
                android:textColor="@android:color/white"
                android:inputType="textPassword"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/newPasswordToggle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_solid_eye_disable"
                app:tint="@color/gray_light" />

        </LinearLayout>

        <!-- Confirm Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Xác nhận mật khẩu mới"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/notification_item_background">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_lockk"

                app:tint="@color/gray_light" />

            <EditText
                android:id="@+id/confirmPasswordEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:background="@android:color/transparent"
                android:hint="*************"
                android:textColorHint="@color/gray_light"
                android:textColor="@android:color/white"
                android:inputType="textPassword"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/confirmPasswordToggle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_solid_eye_disable"
                app:tint="@color/gray_light" />

        </LinearLayout>

    </LinearLayout>

    <!-- Change Password Button -->
    <Button
        android:id="@+id/changePasswordButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:text="Đăng xuất"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/notification_icon_background_orange"
        app:backgroundTint="@null" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_bg"
        android:gravity="center"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_workout"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_recipe"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_proflie"
            android:padding="8dp" />

    </LinearLayout>

</LinearLayout>