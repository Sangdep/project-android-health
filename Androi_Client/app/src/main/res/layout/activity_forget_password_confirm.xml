<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ForgetPassword_confirm">

    <!-- 1. Ảnh nền trên đầu -->
    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_pas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. Nút quay lại -->
    <!-- Header -->
    <LinearLayout
        android:background="@drawable/header_nav_bg"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_button_style"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_backk"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Đổi mật khẩu"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 3. Logo -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F97316"
        app:layout_constraintTop_toBottomOf="@id/imgHeader"
        app:layout_constraintBottom_toTopOf="@id/layoutContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_logoapp"
            android:scaleType="center"
            android:padding="12dp" />
    </androidx.cardview.widget.CardView>


    <!-- ======================================================= -->
    <!-- PHẦN NỘI DUNG MỚI -->
    <!-- ======================================================= -->

    <!-- 4. Nội dung chính -->
    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/imgHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vui lòng kiểm tra gmail của bạn"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Mô tả -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Chúng tôi đã gửi mã tới abc@gmail.com"
            android:textColor="#6B7280"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="40dp" />

        <!-- Các ô nhập mã OTP -->
        <LinearLayout
            android:id="@+id/otpContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/otp_edit_text1"
                style="@style/OtpEditTextStyle"
                tools:text="8" />
            

            <EditText
                android:id="@+id/otp_edit_text2"
                style="@style/OtpEditTextStyle"
                tools:text="2" />

            <EditText
                android:id="@+id/otp_edit_text3"
                style="@style/OtpEditTextStyle"
                tools:text="2" />

            <EditText
                android:id="@+id/otp_edit_text4"
                style="@style/OtpEditTextStyle"
                tools:text="2" />

            <EditText
                android:id="@+id/otp_edit_text5"
                style="@style/OtpEditTextStyle"
                tools:text="2" />

            <EditText
                android:id="@+id/otp_edit_text6"
                style="@style/OtpEditTextStyle"
                tools:text="2" />

        </LinearLayout>
    </LinearLayout>

    <!-- Nút "Xác nhận" -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Xác nhận"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/hardcode_rounded_black_button_bg"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/layoutContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dòng chữ gửi lại mã -->
    <TextView
        android:id="@+id/tvResendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi lại mã"
        android:textColor="#F97316"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
