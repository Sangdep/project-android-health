<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ForgetPassword_confirm">
    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:scaleType="centerCrop"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. Nút quay lại -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/hardcode_circle_light_gray_bg"
        android:contentDescription="Quay lại"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 3. Logo -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F97316"
        app:layout_constraintTop_toBottomOf="@id/imgHeader"
        app:layout_constraintBottom_toTopOf="@id/layoutContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_logoapp_white_placeholder"
            android:scaleType="center"
            android:padding="12dp" />
    </androidx.cardview.widget.CardView>


    <!-- ======================================================= -->
    <!-- PHẦN NỘI DUNG MỚI -->
    <!-- ======================================================= -->

    <!-- 4. Nội dung chính -->
    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/imgHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vui lòng kiểm tra gmail của bạn"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Mô tả -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Chúng tôi đã gửi mã tới abc@gmail.com"
            android:textColor="#6B7280"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />


        <!-- Các ô nhập mã OTP -->
        <LinearLayout
            android:id="@+id/otpContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/otp_edit_text1"
                style="@style/OtpEditTextStyle"
                tools:text="8"/>

            <EditText
                android:id="@+id/otp_edit_text2"
                style="@style/OtpEditTextStyle"
                tools:text="2"/>

            <EditText
                android:id="@+id/otp_edit_text3"
                style="@style/OtpEditTextStyle"
                tools:text="2"/>

            <EditText
                android:id="@+id/otp_edit_text4"
                style="@style/OtpEditTextStyle"
                tools:text="2"/>
            <!-- Thêm các ô khác nếu cần -->

        </LinearLayout>
    </LinearLayout>

    <!-- Nút "Xác nhận" -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:text="Xác nhận"
        android:textAllCaps="false"
        android:textColor="#BA5050"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/hardcode_rounded_black_button_bg"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layoutContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dòng chữ gửi lại mã (ẩn ban đầu) -->
    <TextView
        android:id="@+id/tvResendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi lại mã"
        android:textColor="#F97316"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
