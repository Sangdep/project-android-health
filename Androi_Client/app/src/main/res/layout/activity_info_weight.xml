<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_text_icon"
    tools:context=".InfoWeight">

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:paddingTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/rounded_circle_white_background"

            android:contentDescription="@string/back_button_description"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <!-- Tạo drawable/rounded_circle_white_background.xml -->
        <!-- Tạo color/orange_text_icon (màu cam cho icon) -->

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/assessment_title"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/buttonBack"
            app:layout_constraintEnd_toStartOf="@id/textViewPageIndicator"
            app:layout_constraintHorizontal_bias="0.15" />

        <TextView
            android:id="@+id/textViewPageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page_indicator_2_of_6"
            android:textColor="@color/orange_text_icon"
            android:background="@drawable/rounded_corner_background_light_orange"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <!-- Tạo drawable/rounded_corner_background_light_orange.xml -->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Question Text -->
    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/current_weight_question"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Unit Toggle Buttons (Kg/Lbs) -->
    <LinearLayout
        android:id="@+id/unitToggleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textViewQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonKg"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="@string/unit_kg"
            android:textColor="@color/orange_text_icon"
            android:background="@drawable/button_unit_selected_background"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>
        <!-- Tạo drawable/button_unit_selected_background.xml (cho trạng thái được chọn) -->
        <!-- Tạo drawable/button_unit_default_background.xml (cho trạng thái không được chọn) -->

        <Button
            android:id="@+id/buttonLbs"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="@string/unit_lbs"
            android:textColor="@android:color/white"

            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Displayed Weight -->
    <TextView
        android:id="@+id/textViewDisplayedWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_weight_display"
        android:textColor="@android:color/white"
        android:textSize="56sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/unitToggleContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ruler/Scale Image (Simulation) -->
    <ImageView
        android:id="@+id/imageViewRuler"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_weight_ruler_static"
        android:scaleType="fitXY"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/textViewDisplayedWeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/weight_ruler_description" />
    <!-- Tạo drawable/ic_weight_ruler_static.png hoặc .xml (hình ảnh thước đo tĩnh) -->


    <!-- Continue Button -->
    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/continue_button_text"
        android:textColor="@color/orange_text_icon"
        android:background="@drawable/rounded_corner_button_white"
        app:icon="@drawable/ic_arrow_forward"
        app:iconTint="@color/orange_text_icon"
        app:iconGravity="textEnd"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- Tạo drawable/rounded_corner_button_white.xml -->

</androidx.constraintlayout.widget.ConstraintLayout>
