<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp"
        android:backgroundTint="#FF9800">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <ImageButton
                android:id="@+id/btnBackFood"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_back_button_white"
                android:src="@drawable/ic_backk"
                android:contentDescription="Back"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm thực phẩm"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên món ăn"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>
            <EditText
                android:id="@+id/etFoodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_simple"
                android:hint="Nhập tên thực phẩm..."
                android:minHeight="48dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>
            <Spinner
                android:id="@+id/spinnerFoodCategory"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_spinner_border"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thương hiệu"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>
                    <EditText
                        android:id="@+id/etBrand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_simple"
                        android:hint="Brand"
                        android:minHeight="48dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khẩu phần"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp"/>
                    <EditText
                        android:id="@+id/etServingSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_simple"
                        android:hint="1 chén/bát"
                        android:minHeight="48dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinh dưỡng (trên 100g)"
                android:textStyle="bold"
                android:textColor="#FF9800"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <EditText
                    android:id="@+id/etFoodCalories"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_simple"
                    android:hint="Calo (kcal)"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:layout_marginEnd="8dp"/>
                <EditText
                    android:id="@+id/etProtein"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_simple"
                    android:hint="Protein (g)"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <EditText
                    android:id="@+id/etCarb"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_simple"
                    android:hint="Carb (g)"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:layout_marginEnd="8dp"/>
                <EditText
                    android:id="@+id/etFat"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_simple"
                    android:hint="Fat (g)"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <EditText
                    android:id="@+id/etFiber"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_simple"
                    android:hint="Xơ (g)"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:layout_marginEnd="8dp"/>
                <EditText
                    android:id="@+id/etSugar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_simple"
                    android:hint="Đường (g)"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã vạch và Hình ảnh"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/etBarcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_simple"
                android:hint="Nhập mã vạch..."
                android:inputType="number"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etFoodImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_simple"
                android:hint="Dán link ảnh vào đây..."
                android:inputType="textUri"
                android:minHeight="48dp"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnSaveFood"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Lưu thực phẩm"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF9800"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>