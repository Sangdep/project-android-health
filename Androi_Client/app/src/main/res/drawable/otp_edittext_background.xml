<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi EditText được focus -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="12dp"/>
            <stroke android:width="1.5dp" android:color="#F97316" /> <!-- Viền cam khi focus -->
        </shape>
    </item>
    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F3F4F6"/> <!-- Màu nền xám nhạt -->
            <corners android:radius="12dp"/>
            <!-- Không có viền ở trạng thái mặc định -->
        </shape>
    </item>
</selector>
    