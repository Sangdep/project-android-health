<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:id="@+id/main">

    <!-- Header -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp"
        android:backgroundTint="#2196F3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_back_button_white"
                android:src="@drawable/ic_backk"
                android:contentDescription="Back"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản lí thông báo"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Notification Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Notification Type Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="@android:color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loại thông báo"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"/>

                    <RadioGroup
                        android:id="@+id/radioGroupNotificationType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radioManual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thông báo thủ công"
                            android:textSize="15sp"
                            android:padding="8dp"/>

                        <RadioButton
                            android:id="@+id/radioAuto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thông báo tự động"
                            android:textSize="15sp"
                            android:padding="8dp"/>

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Manual Notification Form -->
            <LinearLayout
                android:id="@+id/layoutManualNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiêu đề"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNotificationTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nhập tiêu đề thông báo"
                        android:inputType="text"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Message -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nội dung"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNotificationMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nhập nội dung thông báo"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:gravity="top"
                        android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Target Users -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gửi đến"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/spinnerTargetUsers"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_spinner"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Send Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSendNotification"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Gửi thông báo"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_blue"
                    android:layout_marginBottom="16dp"/>

            </LinearLayout>

            <!-- Auto Notification Settings -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAutoNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="@android:color/white"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cài đặt thông báo tự động"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp"/>

                    <!-- Reminder for meal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nhắc nhở bữa ăn"
                            android:textSize="15sp"
                            android:textColor="#333333"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchMealReminder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"/>

                    </LinearLayout>

                    <!-- Reminder for exercise -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nhắc nhở tập luyện"
                            android:textSize="15sp"
                            android:textColor="#333333"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchExerciseReminder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"/>

                    </LinearLayout>

                    <!-- Goal achievement -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thành tích đạt mục tiêu"
                            android:textSize="15sp"
                            android:textColor="#333333"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchGoalAchievement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"/>

                    </LinearLayout>

                    <!-- Save Auto Settings -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSaveAutoSettings"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Lưu cài đặt"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:background="@drawable/bg_button_blue"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Sent Notifications History -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lịch sử thông báo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewNotificationHistory"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>